{
  "name": "Sci Hub Injector",
  "description": "Adds SciHub links to popular publishing websites to make free access to science even easier.",
  "version": "1.2.1",
  "permissions": [],
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "https://pubmed.ncbi.nlm.nih.gov/*",
        "https://www.nature.com/*",
        "https://www.tandfonline.com/*",
        "https://www.sciencedirect.com/*",
        "http://www.eurekaselect.com/*",
        "https://www.science.org/*",
        "https://dom-pubs.onlinelibrary.wiley.com/doi/*",
        "https://link.springer.com/*",
        "https://www.jstor.org/*",
        "https://www.researchgate.net/*",
        "https://journals.sagepub.com/*",
        "https://www.degruyter.com/*",
        "https://ieeexplore.ieee.org/*",
        "https://journals.sagepub.com/*",
        "https://dl.acm.org/doi/*"
      ],
      "js": ["sci-hub-inject.user.js"]
    }
  ],

  "permissions": ["storage"],

  "options_ui": {
    "page": "options.html",
    "browser_style": true,
    "chrome_style": true,
    "open_in_tab": false
  },

  "icons": {
    "250": "icon.png"
  }
}
